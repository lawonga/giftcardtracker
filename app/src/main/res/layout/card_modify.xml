<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:text="Amount"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:id="@+id/add_or_subtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>
    <EditText
        android:id="@+id/edit_add_or_subtract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Cancel"
        android:id="@+id/modify_cancel"
        android:layout_weight="1"
        android:background="@drawable/buttonshapesmall"
        android:textColor="@drawable/buttonshamesmallcolor"/>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="OK"
        android:id="@+id/modify_ok"
        android:layout_weight="1"
        android:background="@drawable/buttonshapesmall"
        android:textColor="@drawable/buttonshamesmallcolor"/>
    </LinearLayout>
</LinearLayout>